<form method="POST" action="/calculadora">
    <div class="form-group">
        <label for="prestamo">Prestamo</label>
        <input type="text" class="form-control" id="prestamo" name="prestamo">

        <label for="meses">Meses</label>
        <input type="text" class="form-control" id="meses" name="meses">

        <label for="interes">Interes por mes</label>
        <input type="text" class="form-control" id="interes" name="interes">

    </div>
